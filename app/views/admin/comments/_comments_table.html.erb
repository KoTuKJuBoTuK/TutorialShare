<table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Body</th>
                <th>Author</th>
                <th>Tutorial</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @comments.all.each_with_index do |comment, index| %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%=comment.body[0..15]%>
                    </td>
                    <td>
                        <%= comment.user.username %>
                    </td>
                    <td>
                        <%= link_to comment.tutorial.title, tutorial_path(comment.tutorial) %>
                    </td>
                    <td>
                        <%= link_to 'Edit', "", class: "btn btn-primary btn-sm" %>
                        <%= link_to 'Delete', "", method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>