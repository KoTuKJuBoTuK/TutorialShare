<table class="table" id="tutorialsTable">
    <thead>
        <tr>
            <th><a onclick="sortTable(0, 'tutorialsTable')">Title</a></th>
            <th><a onclick="sortTable(1, 'tutorialsTable')">Category</a></th>
            <th><a onclick="sortTable(1, 'tutorialsTable')">Author</a></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @tutorials.each do |tutorial| %>
            <tr>
                <td>
                    <%= tutorial.title %>
                </td>
                <td>
                    <%= tutorial.category.name %>
                </td>
                <td>
                    <%= tutorial.user.username %>
                </td>
                <td>
                    <%= link_to 'Profile', user_path(tutorial.user), class: "btn btn-info btn-sm" %>
                    <%= link_to 'Tutorial', tutorial_path(tutorial), class: "btn btn-success btn-sm" %>
                    <%= link_to 'Edit', edit_tutorial_path(tutorial), class: "btn btn-primary btn-sm" %>
                    <%= link_to 'Delete', tutorial_path(tutorial), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>