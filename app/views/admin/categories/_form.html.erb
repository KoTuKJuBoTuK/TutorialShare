<% if @category.errors.any? %>
<div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
    <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ul>
</div>
<% end %>

<%= form_for [:admin, @category], html: { multipart: true } do |f| %>
    <div class="form-group" style="width: 370px">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', autofocus: true, maxlength: 40 %>
    </div>
    <div class="form-group">
        <%= f.submit t('categories.form.submit', action: 'Создать'), class: 'btn btn-primary' %>
        <%= link_to t('common.back'), :back, class: 'btn btn-primary' %>
    </div>
<% end %>