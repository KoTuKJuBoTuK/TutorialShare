<table class="table" id="usersTable">
        <thead>
            <tr>
                <th><a onclick="sortTable(0, 'usersTable')">Username</a></th>
                <th><a onclick="sortTable(1, 'usersTable')">Email</a></th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td>
                        <%= user.username %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.status %>
                    </td>
                    <td>
                        <%= link_to 'Profile', user_path(user), class: "btn btn-info btn-sm" %>
                        <%= link_to 'Edit', edit_user_registration_path(user), class: "btn btn-primary btn-sm" %>
                        <%= link_to 'Delete', user_path(user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>