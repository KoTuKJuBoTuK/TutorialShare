<h2><%= t('registrations.new.title') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: t('activerecord.attributes.user.username') %>
  </div>

  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>    
    <%= f.email_field :email, class: "form-control", placeholder: t('activerecord.attributes.user.email') %>
  </div>

  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>    
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: t('activerecord.attributes.user.password') %>
  </div>

  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>    
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: t('activerecord.attributes.user.password_confirmation') %>
  </div>

  <div class="actions">
    <%= f.submit t('common.sign.up'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>