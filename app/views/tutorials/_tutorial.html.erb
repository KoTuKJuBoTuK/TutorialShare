<div>
  <article>
    <section>
      <article class="underline">
        <h1>
          <a href="<%= tutorial_path(tutorial) %>" style="text-decoration:none;">
            <%= tutorial.title %>
          </a>
        </h1>
          by <%= tutorial.user.username if tutorial.user_id? %> at
          <%= tutorial.created_at.to_date.strftime("%d %B, %Y") %>
          Rating: <%= rating_for tutorial, 'rating', enable_half: true, disable_after_rate: true, star: 5 %>
          <%= imdb_style_rating_for tutorial, current_user %>
        <div class="tags">
          <%= raw tutorial.tags.map(&:name).map { |t| link_to "<span class='label label-primary transparent'>#{t}</span>".html_safe, tag_path(t) }.join(' ') %>
        </div>
        <h2 class="description">
          <%= tutorial.description %>
        </h2>
        <a href="<%= tutorial_path(tutorial) %>" style="text-decoration:none;">
          <%= cl_image_tag(tutorial.image, width: 815) %>
          <%#= image_tag tutorial.image.url(:large), class: "preview-image" if tutorial.image? %>
        </a>
      </article>
    </section>
  </article>
</div>