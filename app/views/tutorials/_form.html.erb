<%= javascript_include_tag Ckeditor.cdn_url %>
<div>
    <article>
        <section>        
            <article class="underline">
    <% if @tutorial.errors.any? %>
        <div class="alert alert-danger">
            <h5>
                <%= t('common.errors') %>
            </h5>
            <ul>
                <% @tutorial.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                    <% end %>
            </ul>
        </div>
        <% end %>

            <%= form_for @tutorial, html: { multipart: true } do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control', autofocus: true, maxlength: 40 %>
                </div>
                <div class="form-group">
                    <%= f.label :description %>
                        <%= f.text_area :description, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :category_id %>
                        <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true }, class: 'form-control' %>
                </div>

                <div class="form-group">
                    <%= f.label :body %>
                    <%#= f.text_area :body %>
                    <%= f.cktext_area :body, class: 'editor' %>
                </div>

                <div class="form-group">
                    <%= f.label :image %>
                    <%= f.file_field :image %>
                </div>

                <div class="form-group">
                    <%= f.label :all_tags %>
                    <%= f.text_field :all_tags, 'data-role' => 'tagsinput' %>
                </div>

                <div class="form-group">
                    <%= f.submit t('.submit', action: @tutorial.new_record? ? 'Создать' : 'Изменить'), class: 'btn btn-primary' %>
                    <%= link_to t('common.back'), :back, class: 'btn btn-primary' %>
                </div>
                <% end %>
            </article>

            </section>
            </article>
</div>