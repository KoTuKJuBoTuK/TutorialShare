<div>
    <article>
        <section class="tutorial-head">
            <h1>
                <%= @user.username %>
            </h1>
            <%= link_to "Tutorials", "/users/#{@user.id}/tutorials", class: "btn btn-sm btn-success" %>
            <%= link_to "Comments", "/users/#{@user.id}/comments", class: "btn btn-sm btn-warning" %>
        </section>

        <section class="tutorial-body">
            e-mail: <%= @user.email %><br>
            tutorials: <%= @user.tutorials.length %><br>
            comment: <%= @user.comments.length %>
        </section>
    </article>
</div>