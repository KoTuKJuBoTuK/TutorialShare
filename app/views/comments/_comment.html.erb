<div class="comment col-xs-10">
    <div class="comment-background">
        <div class="comment-body">
            <p class="pull-right">
                <small><%= time_ago_in_words(comment.created_at) %> ago</small>
            </p>
            <h4><%= comment.user.username %></h4>
            <div class="media-body">
                <p>
                    <%= comment.body %>
                </p>
            </div>
            <%= link_to like_tutorial_comment_path(comment), method: :put do %>
                <span onclick="toggleLikeButton(this)" class="fa fa-thumbs-up"></span>
            <% end %>
            Count: <%= comment.get_likes.size %>
        </div>
    </div>
</div>