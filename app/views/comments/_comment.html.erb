<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">

<% cache comment do %>
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
                        <img src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
                    </div>
                    <div class="pull-left meta">
                        <div class="title h5">
                            <%= link_to user_path(comment.user) do %>
                                <b><%= comment.user.username %></b>
                            <% end %>
                            made a comment.
                        </div>
                        <h6 class="text-muted time"><%= time_ago_in_words(comment.created_at) %> ago</h6>
                    </div>
                </div> 
                <div class="post-description"> 
                    <p><%= comment.body %></p>
                    <div class="stats">
                        <a href="/tutorials/<%= comment.id %>/comments/<%= comment.tutorial.id %>/like" data-method="put" data-remote="true"
                            class="btn btn-default stat-item fa">
                            <i class="fa fa-btn like-btn-<%= comment.id %> fa-1x fa-thumbs-<%= current_user.liked?(comment) ? "down" : "up" %>"></i>
                            <span class="likes-count-<%= comment.id %>"><%= comment.get_likes.size %></span>
                        </a>
                        
                        <a href="#" class="btn btn-default stat-item">
                            <i class="fa fa-thumbs-down icon"></i>12
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>